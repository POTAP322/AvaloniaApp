<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApp.Views.MainWindow"
        xmlns:vm="clr-namespace:AvaloniaApp.ViewModels"
        xmlns:views="clr-namespace:AvaloniaApp.Views"
        xmlns:models="clr-namespace:AvaloniaApp.Models"
        Title="Гонки" Width="800" Height="600"
        x:DataType="vm:MainWindowViewModel">
    <StackPanel>
        <Button Content="Добавить болид" Command="{Binding AddRacingCarCommand}"/>

        <ItemsControl ItemsSource="{Binding RacingCars}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:RacingCar">
                    <views:RacingCarView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>