<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApp.Views.RacingCarView"
             x:DataType="models:RacingCar"
             xmlns:models="clr-namespace:AvaloniaApp.Models">
    <StackPanel>
        <TextBlock Text="{Binding Name}" Margin="5"/>
        <TextBlock Text="{Binding Speed}" Margin="5"/>
        <TextBlock Text="{Binding IsTireWornOut}" Margin="5"/>
        <TextBlock Text="{Binding IsCrashed}" Margin="5"/>
    </StackPanel>
</UserControl>
